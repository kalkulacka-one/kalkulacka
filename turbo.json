{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["^build:openapi", "^@repo/schema#build", "^@repo/design-system#build", "^@repo/database#build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "build:openapi": {
      "dependsOn": ["^build:openapi"],
      "cache": false
    },
    "ncu": {
      "dependsOn": ["^ncu"]
    }
  }
}
