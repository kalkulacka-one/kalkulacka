{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["schema.kalkulacka.one#build:openapi", "@repo/database#build", "@repo/design-system#build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false
    },
    "build:openapi": {
      "dependsOn": ["^build:openapi"],
      "cache": false
    },
    "ncu": {
      "dependsOn": ["^ncu"]
    },
    "ncu:upgrade": {
      "dependsOn": ["^ncu:upgrade"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ui": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    }
  },
  "ui": "tui"
}
