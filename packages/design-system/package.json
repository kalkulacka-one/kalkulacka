{
  "name": "@repo/design-system",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./styles": "./dist/index.css",
    "./fonts": "./dist/fonts",
  },
  "scripts": {
    "build": "npm run fonts && npm run tailwind",
    "fonts": "mkdir -p ./dist && cp -r ./src/fonts ./dist/fonts",
    "dev": "npm run fonts && npm run tailwind:watch",
    "generate:component": "turbo gen react-component",
    "lint": "eslint . --max-warnings 0",
    "tailwind": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "tailwind:watch": "npm run tailwind -- --watch"
  },
  "packageManager": "npm@10.8.2",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "^0.0.0",
    "@repo/typescript-config": "*",
    "@turbo/gen": "^2.0.6",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.4",
    "clsx": "^2.1.1"
  }
}
