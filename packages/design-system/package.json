{
  "name": "@repo/design-system",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./ui": "./src/ui/index.ts",
    "./svg": "./src/svg/index.ts",
    "./themes/*": "./src/themes/*.css",
    "./styles": "./dist/index.css",
    "./fonts": "./dist/fonts",
    "./heading": "./src/heading.tsx",
    "./tailwind": "./tailwind.config.ts",
    "./demo": "./src/index.ts",
    "./progressBar": "./src/progressBar.tsx",
    "./iconButton": "./src/iconButton.tsx",
    "./starIconButton": "./src/starIconButton.tsx",
    "./starIcon": "./src/starIcon.tsx",
    "./starIconFilled": "./src/starIconFilled.tsx",
    "./toggleIconButton": "./src/toggleIconButton.tsx",
    "./toggleButton": "./src/toggleButton.tsx",
    "./yesIcon": "./src/yesIcon.tsx",
    "./button": "./src/button.tsx",
    "./buttonInFavour": "./src/buttonInFavour.tsx",
    "./buttonAgainst": "./src/buttonAgainst.tsx",
    "./buttonNeutral": "./src/buttonNeutral.tsx",
    "./badge": "./src/badge.tsx",
    "./typography": "./src/typography.tsx"
  },
  "scripts": {
    "build": "npm run tailwind",
    "dev": "npm run tailwind:watch",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "generate:component": "turbo gen react-component",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "tailwind": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "tailwind:watch": "npm run tailwind -- --watch"
  },
  "packageManager": "npm@10.8.2",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@turbo/gen": "^2.0.6",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4"
  }
}
