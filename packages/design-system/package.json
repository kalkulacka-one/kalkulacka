{
  "name": "@repo/design-system",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./themes/*": "./src/themes/*.css",
    "./styles": "./dist/index.css",
    "./fonts": "./dist/fonts",
    "./components": "./src/components/index.ts",
    "./types": "./src/types/index.ts",
    "./icons": "./src/components/icons/index.ts",
    "./utils": "./src/utils/index.ts",
    "./provider": "./src/provider/index.ts"
  },
  "scripts": {
    "build": "npm run fonts && npm run tailwind",
    "dev": "npm run fonts && npm run tailwind:watch",
    "fonts": "mkdir -p ./dist && cp -r ./src/fonts ./dist",
    "generate:component": "turbo gen react-component",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "tailwind": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "tailwind:watch": "npm run tailwind -- --watch",
    "ncu": "ncu -u"
  },
  "packageManager": "npm@11.2.0",
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.0.14",
    "@tailwindcss/postcss": "^4.0.14",
    "@turbo/gen": "^2.4.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react-hook-form": "^7.56.3",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.22.3"
  }
}
