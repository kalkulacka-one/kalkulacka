{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.kalkulacka.one/images.schema.json",
  "title": "Images",
  "description": "List of images",
  "type": "array",
  "minItems": 1,
  "items": {
    "title": "Image",
    "description": "Specification of an image",
    "type": "object",
    "properties": {
      "type": {
        "title": "Image type",
        "description": "Type of the image",
        "type": "string",
        "enum": ["avatar", "logo", "portrait", "opengraph", "twitter"],
        "examples": ["avatar"]
      },
      "urls": {
        "title": "Image paths",
        "description": "Relative paths to image files for different sizes",
        "type": "object",
        "properties": {
          "original": {
            "title": "Original image path",
            "description": "Relative path to original source image",
            "type": "string",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.jpg"]
          },
          "xs": {
            "title": "Extra small image path",
            "description": "Relative path to optimized 100 × 100 px WebP image",
            "type": "string",
            "pattern": "\\.webp$",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.xs.webp"]
          },
          "sm": {
            "title": "Small image path",
            "description": "Relative path to optimized 200 × 200 px WebP image",
            "type": "string",
            "pattern": "\\.webp$",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.sm.webp"]
          },
          "md": {
            "title": "Medium image path",
            "description": "Relative path to optimized 400 × 400 px WebP image",
            "type": "string",
            "pattern": "\\.webp$",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.md.webp"]
          },
          "lg": {
            "title": "Large image path",
            "description": "Relative path to optimized 800 × 800 px WebP image",
            "type": "string",
            "pattern": "\\.webp$",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.lg.webp"]
          },
          "xl": {
            "title": "Extra large image path",
            "description": "Relative path to optimized 1200 × 1200 px WebP image",
            "type": "string",
            "pattern": "\\.webp$",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.xl.webp"]
          },
          "2xl": {
            "title": "Double extra large image path",
            "description": "Relative path to optimized 1600 × 1600 px WebP image",
            "type": "string",
            "pattern": "\\.webp$",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.2xl.webp"]
          },
          "3xl": {
            "title": "Triple extra large image path",
            "description": "Relative path to optimized 2400 × 2400 px WebP image",
            "type": "string",
            "pattern": "\\.webp$",
            "examples": ["images/avatars/4a685bde-8b18-4348-b2bd-850d68943440/image.3xl.webp"]
          }
        },
        "additionalProperties": false,
        "required": ["original"]
      },
      "width": {
        "title": "Image width",
        "description": "Width of the original image in pixels",
        "type": "integer",
        "minimum": 1,
        "examples": [800]
      },
      "height": {
        "title": "Image height",
        "description": "Height of the original image in pixels",
        "type": "integer",
        "minimum": 1,
        "examples": [800]
      }
    },
    "unevaluatedProperties": false,
    "required": ["type", "urls"]
  }
}
