{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.kalkulacka.one/calculator.schema.json",
  "title": "Calculator",
  "description": "Calculator is a set of questions, candidates and their answers",
  "type": "object",
  "$defs": {
    "id": {
      "title": "ID",
      "description": "Unique identifier of a calculator in the format of UUID",
      "type": "string",
      "format": "uuid",
      "examples": ["e2cf4fec-81e0-490c-a056-7f63177dc6a7"]
    },
    "key": {
      "title": "Key",
      "description": "Human-friendly unique key of a standalone calculator in the hyphen-separated lowercased format",
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "examples": ["doprava-v-praze"]
    },
    "version": {
      "title": "Version",
      "description": "Semantic version of the calculator",
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.2.3"]
    },
    "createdAt": {
      "title": "Created at",
      "description": "Time of the creation of a calculator in the ISO 8601 format",
      "type": "string",
      "format": "date-time",
      "examples": ["2021-01-01T00:00:00+01:00"]
    },
    "updatedAt": {
      "title": "Updated at",
      "description": "Time of the last update of a calculator in the ISO 8601 format",
      "type": "string",
      "format": "date-time",
      "examples": ["2021-01-01T00:00:00+01:00"]
    },
    "publishedAt": {
      "title": "Published at",
      "description": "Time when a calculator should be published in the ISO 8601 format",
      "type": "string",
      "format": "date-time",
      "examples": ["2021-01-01T00:00:00+01:00"]
    },
    "title": {
      "title": "Title",
      "description": "Title of a calculator",
      "type": "string",
      "examples": ["2. kolo prezidentských voleb 2023"]
    },
    "shortTitle": {
      "title": "shortTitle",
      "description": "Short title of a calculator with a maximum of 25 characters",
      "type": "string",
      "maxLength": 25,
      "examples": ["Prezidentské (2. kolo)"]
    },
    "description": {
      "title": "Description",
      "description": "Description of a calculator",
      "type": "string",
      "examples": ["Volební kalkulačka pro 2. kolo prezidentských voleb 2023"]
    },
    "methodology": {
      "title": "Methodology",
      "description": "Methodology of a calculator",
      "type": "string",
      "examples": ["Pokud kandidát neodpověděl na otázku, jeho odpověď se nezapočítává do výsledku kalkulačky."]
    },
    "intro": {
      "type": "string",
      "description": "Intro text displayed before starting the calculator"
    },
    "tags": {
      "$ref": "./tags.schema.json"
    },
    "images": {
      "$ref": "./images.schema.json"
    },
    "calculatorGroup": {
      "title": "Calculator group",
      "description": "Reference to a calculator group the calculator belongs to",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./calculator-group.schema.json#/properties/id"
        },
        "key": {
          "$ref": "./calculator-group.schema.json#/properties/key"
        }
      },
      "unevaluatedProperties": false,
      "required": ["id", "key"]
    },
    "election": {
      "title": "Election",
      "description": "Reference to an election the calculator belongs to",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./election.schema.json#/properties/id"
        },
        "key": {
          "$ref": "./election.schema.json#/properties/key"
        }
      },
      "unevaluatedProperties": false,
      "required": ["id", "key"]
    },
    "variant": {
      "type": "object",
      "properties": {
        "key": {
          "$ref": "./variant.schema.json#/properties/key"
        }
      },
      "unevaluatedProperties": false,
      "required": ["key"]
    },
    "district": {
      "type": "object",
      "properties": {
        "key": {
          "$ref": "./district.schema.json#/properties/key"
        }
      },
      "unevaluatedProperties": false,
      "required": ["key"]
    },
    "round": {
      "type": "object",
      "properties": {
        "number": {
          "$ref": "./round.schema.json#/properties/number"
        }
      },
      "unevaluatedProperties": false,
      "required": ["number"]
    },
    "checksums": {
      "title": "Checksums",
      "description": "Checksums for calculator data",
      "type": "object",
      "properties": {
        "questions": {
          "type": "object",
          "description": "Checksum of the questions data",
          "properties": {
            "algorithm": {
              "type": "string",
              "enum": ["sha256"]
            },
            "value": {
              "type": "string",
              "description": "Checksum value",
              "examples": ["e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855"]
            }
          },
          "required": ["algorithm", "value"],
          "unevaluatedProperties": false
        }
      },
      "unevaluatedProperties": false
    },
    "changes": {
      "title": "Changes",
      "description": "Changelog of the calculator data",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semantic version of this change"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "examples": ["2021-01-01T00:00:00+01:00"]
          },
          "title": {
            "type": "string",
            "examples": ["Oprava překlepu v otázce 3"]
          },
          "description": {
            "type": "string",
            "examples": ["V otázce 3 byl opraven překlep ve slově demokracie."]
          }
        },
        "required": ["version", "updatedAt"],
        "unevaluatedProperties": false
      }
    }
  },
  "properties": {
    "id": {
      "$ref": "#/$defs/id"
    },
    "version": {
      "$ref": "#/$defs/version"
    },
    "createdAt": {
      "$ref": "#/$defs/createdAt"
    },
    "updatedAt": {
      "$ref": "#/$defs/updatedAt"
    },
    "publishedAt": {
      "$ref": "#/$defs/publishedAt"
    },
    "title": {
      "$ref": "#/$defs/title"
    },
    "shortTitle": {
      "$ref": "#/$defs/shortTitle"
    },
    "description": {
      "$ref": "#/$defs/description"
    },
    "methodology": {
      "$ref": "#/$defs/methodology"
    },
    "intro": {
      "$ref": "#/$defs/intro"
    },
    "tags": {
      "$ref": "#/$defs/tags"
    },
    "images": {
      "$ref": "#/$defs/images"
    },
    "checksums": {
      "$ref": "#/$defs/checksums"
    },
    "changes": {
      "$ref": "#/$defs/changes"
    }
  },
  "unevaluatedProperties": false,
  "required": ["id", "createdAt"],
  "oneOf": [
    {
      "title": "Standalone calculator",
      "description": "Standalone calculator is a calculator that is not part of a calculator group",
      "properties": {
        "key": {
          "$ref": "#/$defs/key"
        }
      },
      "required": ["key", "shortTitle"],
      "not": {
        "required": ["calculatorGroup", "election"]
      }
    },
    {
      "title": "Calculator from a group",
      "description": "Calculator that is part of a calculator group",
      "properties": {
        "calculatorGroup": {
          "$ref": "#/$defs/calculatorGroup"
        },
        "variant": {
          "$ref": "#/$defs/variant"
        }
      },
      "required": ["calculatorGroup", "variant"],
      "not": {
        "required": ["election"]
      }
    },
    {
      "title": "Calculator from an election",
      "description": "Calculator that is part of an election",
      "properties": {
        "calculatorGroup": {
          "$ref": "#/$defs/calculatorGroup"
        },
        "election": {
          "$ref": "#/$defs/election"
        },
        "variant": {
          "$ref": "#/$defs/variant"
        },
        "district": {
          "$ref": "#/$defs/district"
        },
        "round": {
          "$ref": "#/$defs/round"
        }
      },
      "required": ["calculatorGroup", "election"],
      "anyOf": [
        {
          "required": ["variant"]
        },
        {
          "required": ["district"]
        },
        {
          "required": ["round"]
        }
      ]
    }
  ]
}
