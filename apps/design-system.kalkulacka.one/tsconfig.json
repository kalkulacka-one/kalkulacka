{
  "extends": "@kalkulacka-one/typescript-config/react-library.json",
  "include": ["**/*.mdx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "public", "build"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext"
  }
}
